{
  "name": "menulink",
  "version": "1.0.0",
  "description": "Plataforma completa de gestión de menús digitales para restaurantes",
  "main": "src/app.js",
  "scripts": {
    "backend:start": "cd src && npm run start",
    "backend:dev": "nodemon src/app.js",
    "frontend:dev": "npm run dev --prefix frontend",
    "frontend:build": "cd frontend && npm run build",
    "frontend:preview": "cd frontend && npm run preview",
    "install:all": "npm install && cd src && npm install && cd ../frontend && npm install",
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "build": "cd frontend && npm run build",
    "start": "node src/app.js"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "nodemailer": "^6.9.4",
    "express": "^5.1.0",
    "express-validator": "^7.3.1",
    "jsonwebtoken": "^9.0.3",
    "sequelize": "^6.37.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tedious": "^19.1.3"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.11"
  }
}
